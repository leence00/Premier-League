<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonfamily"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="Family"
        android:backgroundTint="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonnumber"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_marginTop="32dp"
        android:text="Number"
        android:backgroundTint="@color/purple"
        app:layout_constraintEnd_toEndOf="@+id/buttonfamily"
        app:layout_constraintStart_toStartOf="@+id/buttonfamily"
        app:layout_constraintTop_toBottomOf="@+id/buttonfamily" />

    <Button
        android:id="@+id/buttoncolors"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_marginTop="32dp"
        android:text="Colors"
        android:backgroundTint="@color/royalblue"
        app:layout_constraintEnd_toEndOf="@+id/buttonnumber"
        app:layout_constraintStart_toStartOf="@+id/buttonnumber"
        app:layout_constraintTop_toBottomOf="@+id/buttonnumber" />

    <Button
        android:id="@+id/buttonphrases"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_marginTop="32dp"
        android:text="Phrases"
        android:backgroundTint="@color/pink"
        app:layout_constraintEnd_toEndOf="@+id/buttoncolors"
        app:layout_constraintStart_toStartOf="@+id/buttoncolors"
        app:layout_constraintTop_toBottomOf="@+id/buttoncolors" />
</androidx.constraintlayout.widget.ConstraintLayout>